# Jenkins Environment Configuration
# Used by Jenkins CI/CD pipeline

# Jenkins Configuration
JENKINS_URL=http://localhost:9090
JENKINS_USER=admin
JENKINS_PASS=admin123

# Git Configuration
GIT_REPO_URL=https://github.com/Navpan18/ShopSphere.git
GIT_BRANCH=main

# Docker Configuration
DOCKER_REGISTRY=localhost:5000
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Database Configuration (Test Environment)
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_NAME=testdb
TEST_DB_USER=testuser
TEST_DB_PASS=testpass123

# Application Configuration
APP_ENV=ci
DEBUG=false
SECRET_KEY=your-secret-key-for-ci

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_NOTIFICATION=your-email@example.com

# Performance Testing
LOAD_TEST_DURATION=30s
LOAD_TEST_VUS=10

# Security Scanning
ENABLE_SECURITY_SCAN=true
SECURITY_THRESHOLD=high

# Deployment Configuration
STAGING_HOST=localhost
PROD_HOST=production-server
DEPLOY_TIMEOUT=300

# Monitoring
PROMETHEUS_URL=http://localhost:9091
GRAFANA_URL=http://localhost:3001
